# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	# click bar to play/pause cmus
	bindsym button1 exec "cmus-remote -u; killall -s USR1 py3status"
	#don't scroll I think?
	bindsym button4 nop
	bindsym button5 nop

        status_command py3status -c ~/.config/i3status/config
        #status_command ~/bin/i3status-cmus.sh
        # tray_output none

	colors {
		statusline	#ffffff
		separator	#aaaaaa

		focused_workspace	#ffffff #000000 #ffffff
		active_workspace	#ffffff #000000 #ffffff
		inactive_workspace	#4d4d4d #000000 #4d4d4d
		urgent_workspace        #ff0000 #000000 #ff0000
	}

	# no numbers
	#strip_workspace_numbers yes
}

new_window pixel 3
hide_edge_borders vertical

